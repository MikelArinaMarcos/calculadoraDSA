<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sixBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="6"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/fiveBtn"
        app:layout_constraintStart_toEndOf="@+id/fiveBtn" />

    <Button
        android:id="@+id/zeroBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="0"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/negativeBtn"
        app:layout_constraintStart_toEndOf="@+id/negativeBtn" />

    <Button
        android:id="@+id/negativeBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:width="3dip"
        android:backgroundTint="#A8A8A8"
        android:text="+/-"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#AAA9A9" />

    <Button
        android:id="@+id/equalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#8F3707"
        android:onClick="onClick"
        android:text="="
        android:textColor="#A8A8A8"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/dotBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dotBtn" />

    <Button
        android:id="@+id/plusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="+"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/threeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/threeBtn" />

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="-"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/sixBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sixBtn" />

    <Button
        android:id="@+id/timesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="x"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/nineBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nineBtn" />

    <Button
        android:id="@+id/parenthesisBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:text="()"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/clearBtn"
        app:layout_constraintStart_toEndOf="@+id/clearBtn" />

    <Button
        android:id="@+id/percentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:text="%"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/parenthesisBtn"
        app:layout_constraintStart_toEndOf="@+id/parenthesisBtn" />

    <Button
        android:id="@+id/dividedByBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="/"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/percentBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/percentBtn" />

    <Button
        android:id="@+id/cosBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="cos"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/sinBtn"
        app:layout_constraintStart_toEndOf="@+id/sinBtn" />

    <Button
        android:id="@+id/tanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="tan"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/cosBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cosBtn" />

    <Button
        android:id="@+id/sinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="sen"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/radBtn"
        app:layout_constraintStart_toEndOf="@+id/radBtn" />

    <Button
        android:id="@+id/radBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="rad"
        android:textColor="#8F3707"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toTopOf="@+id/clearBtn"
        app:layout_constraintStart_toStartOf="@+id/clearBtn" />

    <Button
        android:id="@+id/dotBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:text=","
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/zeroBtn"
        app:layout_constraintStart_toEndOf="@+id/zeroBtn" />

    <Button
        android:id="@+id/oneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="1"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toTopOf="@+id/negativeBtn"
        app:layout_constraintStart_toStartOf="@+id/negativeBtn" />

    <Button
        android:id="@+id/twoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="2"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/oneBtn"
        app:layout_constraintStart_toEndOf="@+id/oneBtn" />

    <Button
        android:id="@+id/threeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="3"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/twoBtn"
        app:layout_constraintStart_toEndOf="@+id/twoBtn" />

    <Button
        android:id="@+id/fourBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="4"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toTopOf="@+id/oneBtn"
        app:layout_constraintStart_toStartOf="@+id/oneBtn" />

    <Button
        android:id="@+id/sevenBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="7"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toTopOf="@+id/fourBtn"
        app:layout_constraintStart_toStartOf="@+id/fourBtn" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="C"
        android:textColor="#FA1100"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toTopOf="@+id/sevenBtn"
        app:layout_constraintStart_toStartOf="@+id/sevenBtn" />

    <Button
        android:id="@+id/eightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="8"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/sevenBtn"
        app:layout_constraintStart_toEndOf="@+id/sevenBtn" />

    <Button
        android:id="@+id/nineBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="9"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/eightBtn"
        app:layout_constraintStart_toEndOf="@+id/eightBtn" />

    <Button
        android:id="@+id/fiveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A8A8A8"
        android:onClick="onClick"
        android:text="5"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:cornerRadius="50dip"
        app:layout_constraintBottom_toBottomOf="@+id/fourBtn"
        app:layout_constraintStart_toEndOf="@+id/fourBtn" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/cosBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>